{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"],
      "": [
        "node_modules/",
        "src/types/"
      ]
    },
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src"
  ],
  "types": [
    "src/types"
  ]
}
